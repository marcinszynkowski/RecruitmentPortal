@model RP.Entities.AdminModule.ViewModels.DeleteSurveyQuestionViewModel

@{
    ViewBag.Title = "DeleteSurveyQuestion";
}

<h2 class="text-center">Czy na pewno chcesz usunąć pytanie z ankiety dla procesu o kodzie @Model.RecruitmentProcessCode?</h2>

<div>
    @Html.ActionLink("Powrót", "MenageSurveyQuestions", "Admin", new { recruitmentProcessId = Model.RecruitmentProcessId }, new { @class = "btn btn-dark" })
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.RecruitmentProcessId)
    @Html.HiddenFor(model => Model.SurveyQuestionId)
    @Html.HiddenFor(model => Model.RecruitmentProcessCode)
    <div class="form-group">
        <div class="col-md-10">
            Pytanie: @Html.DisplayFor(model => model.Question, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Usuń" class="btn btn-dark" />
        </div>
    </div>
</div>
}