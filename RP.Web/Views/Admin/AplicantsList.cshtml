@model RP.Entities.AdminModule.ViewModels.AplicantsListViewModel

@{
    ViewBag.Title = "AplicantsList";
}

<h2 class="text-center">Lista aplikujących do procesu o kodzie @Model.RecruitmentProcess.ProcessCode</h2>

<div>
    @Html.ActionLink("Powrót", "MenageRecruitmentProcesses", "Admin", null, new { @class = "btn btn-dark" })
</div><br/>

<div>
    <table class="table table-striped table-condensed table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Użytkownik</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.RecruitmentProcess.Users.Any())
            {
                foreach (var i in Model.RecruitmentProcess.Users)
                {
                    <tr>
                        <td>@Html.ActionLink(i.Email, "MoreInfoUser", "Admin", new { id = i.Id }, null)</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td> <text>brak</text></td>
                </tr>

            }
        </tbody>
    </table>
</div>