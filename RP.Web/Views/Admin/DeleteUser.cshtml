@model RP.Entities.AdminModule.ViewModels.DeleteUserViewModel

@{
    ViewBag.Title = "DeleteUser";
}

<h2 class="text-center">Czy na pewno chcesz usunąć użytkownika?</h2>

<div>
    @Html.ActionLink("Powrót", "MenageUsers", "Admin", null, new { @class = "btn btn-dark" })
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Email)
        <div class="form-group">
            <div class="col-md-10">
                Użytkownik: @Html.DisplayFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Usuń" class="btn btn-dark" />
            </div>
        </div>
    </div>
}