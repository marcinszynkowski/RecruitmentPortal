@model RP.Entities.Account.User
    @{
        ViewBag.Title = "VirtualCV";
    }

    <h2>VirtualCV</h2>

    <div>
        <h3>Dane o koncie</h3>
        <table class="table table-striped table-condensed table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Błędne logowania</th>
                    <th>Blokada konta</th>
                    <th>Ostatnie logowanie</th>
                    <th>Ostatnia zmiana hasła</th>
                    <th>Rola</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td> @Html.DisplayFor(m => Model.Id)</td>
                    <td> @Html.DisplayFor(m => Model.Email)</td>
                    <td> @Html.DisplayFor(m => Model.AccessFailedCount)</td>
                    <td> @Html.DisplayFor(m => Model.LockoutEnabled)</td>
                    <td> @Html.DisplayFor(m => Model.LastLogin)</td>
                    <td> @Html.DisplayFor(m => Model.PasswordLastModified)</td>
                    <td> @Html.DisplayFor(m => Model.Roles.Name)</td>
                </tr>
            </tbody>
        </table>

