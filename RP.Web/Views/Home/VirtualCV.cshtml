        <h3>Edukacja</h3>
        <table class="table table-striped table-condensed table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Nazwa szkoły</th>
                    <th>Kierunek</th>
                    <th>Specjalizacja</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.Education)
                {
                    <tr>
                        <td> @Html.DisplayFor(m => i.NameOfSchool)</td>
                        <td> @Html.DisplayFor(m => i.Major)</td>
                        <td> @Html.DisplayFor(m => i.Minor)</td>
                    </tr>
                }
            </tbody>
        </table>

        <h3>Doświadczenie zawodowe</h3>
        <table class="table table-striped table-condensed table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Od</th>
                    <th>Do</th>
                    <th>Firma</th>
                    <th>Stanowisko</th>
                    <th>Obowiązki</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.WorkExperience)
                {
                    <tr>
                        <td> @Html.DisplayFor(m => i.DateFrom)</td>
                        <td> @Html.DisplayFor(m => i.DateTo)</td>
                        <td> @Html.DisplayFor(m => i.Company)</td>
                        <td> @Html.DisplayFor(m => i.Position)</td>
                        <td> @Html.DisplayFor(m => i.Responsibilities)</td>
                    </tr>
                }
            </tbody>
        </table>

        <h3>Znajomość języków obcych</h3>
        <table class="table table-striped table-condensed table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Jezyk</th>
                    <th>Poziom znajomości</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.UserForeignLanguages)
                {
                    <tr>
                        <td> @Html.DisplayFor(m => i.ForeignLanguages.Name)</td>
                        <td> @Html.DisplayFor(m => i.ForeignLanguageLevels.Name)</td>
                    </tr>
                }
            </tbody>
        </table>

        <h3>Kategorie prawa jazdy</h3>
        <table class="table table-striped table-condensed table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Kategoria</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.DrivingLicenses)
                {
                    <tr>
                        <td> @Html.DisplayFor(m => i.Category)</td>
                    </tr>
                }
            </tbody>
        </table>

        <h3>Kursy i szkolenia</h3>
        <table class="table table-striped table-condensed table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Od</th>
                    <th>Do</th>
                    <th>Typ kursu</th>
                    <th>Rodzaj kursu</th>
                    <th>Nazwa</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.Courses)
                {
                    <tr>
                        <td> @Html.DisplayFor(m => i.DateFrom)</td>
                        <td> @Html.DisplayFor(m => i.DateTo)</td>
                        <td> @Html.DisplayFor(m => i.CourseTypes.Name)</td>
                        <td> @Html.DisplayFor(m => i.CourseKinds.Name)</td>
                        <td> @Html.DisplayFor(m => i.Name)</td>
                    </tr>
                }
            </tbody>
        </table>

        <h3>Umiejętności</h3>
        <table class="table table-striped table-condensed table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Nazwa</th>
                    <th>Opis</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.Skills)
                {
                    <tr>
                        <td> @Html.DisplayFor(m => i.Name)</td>
                        <td> @Html.DisplayFor(m => i.Description)</td>
                    </tr>
                }
            </tbody>
        </table>

        <h3>Zainteresowania</h3>
        <table class="table table-striped table-condensed table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Nazwa</th>
                    <th>Opis</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.Interests)
                {
                    <tr>
                        <td> @Html.DisplayFor(m => i.Name)</td>
                        <td> @Html.DisplayFor(m => i.Description)</td>
                    </tr>
                }
            </tbody>
        </table>

        <h3>Procesy rekrutacyjne, do których zaaplikowano</h3>
        <table class="table table-striped table-condensed table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Kod procesu</th>
                    <th>Nazwa firmy</th>
                    <th>Stanowisko</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.RecruitmentProcess)
                {
                    <tr>
                        <td> @Html.DisplayFor(m => i.ProcessCode)</td>
                        <td> @Html.DisplayFor(m => i.Company)</td>
                        <td> @Html.DisplayFor(m => i.Position)</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>