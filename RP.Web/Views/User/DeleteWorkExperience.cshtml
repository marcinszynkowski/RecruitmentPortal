@model RP.Entities.UserModule.ViewModels.DeleteWorkExperienceViewModel
@{
    ViewBag.Title = "Usuwanie doświadczenia";
}

<h2>Czy na pewno chcesz usunąć to doświadczenie ?</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Position)
        <div class="form-group">
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Position, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Usuń" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Powrót", "WorkExperience", "User")
</div>
