@model RP.Entities.UserModule.ViewModels.DeleteUserAccountViewModel
@{
    ViewBag.Title = "Usuwanie konta";
}

<h2>Czy na pewno chcesz usunąć swoje konto użytkownika ? </h2>
<h2>Miej na uwadze, że proces ten <b>jest nieodwracalny</b> i wiąże się z usunięciem wszystkich zapisanych danych.</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Email)
        <div class="form-group">
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Usuń" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Powrót", "MenageUsers", "Admin")
</div>